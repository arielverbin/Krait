def make_multiplier(factor):
    def multiplier(x):
        return x * factor
    return multiplier

double = make_multiplier(2)
print(double(5))  # 10

class Greeter:
    def __init__(self, name):
        self.name = name

    def __call__(self, greeting):
        return str(greeting) + ", " + str(self.name) + "!"

    @classmethod
    def anonymous(cls):
        return cls("Stranger")

g = Greeter("Alice")
print(g("Hello"))          # Hello, Alice!
print(Greeter.anonymous()("Hi"))  # Hi, Stranger!